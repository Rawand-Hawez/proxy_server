# Dashboard Proxy Server Environment Configuration

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000

# ============================================
# ODOO ERP INTEGRATION (Optional)
# ============================================
# Get these from your Odoo instance settings
ODOO_URL=https://your-odoo-instance.odoo.com
ODOO_DB=your_database_name
ODOO_USER=your_email@example.com
ODOO_PASSWORD=your_api_key_or_password

# ============================================
# REDIS CACHE CONFIGURATION (Optional)
# ============================================
# If not provided, the server will use SQLite as cache fallback
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite database path (relative to project root)
DATABASE_PATH=./data/proxy_server.db

# ============================================
# CACHE CONFIGURATION
# ============================================
# Default cache TTL (time to live) in seconds
CACHE_DEFAULT_TTL=3600

# Cache key prefix to avoid conflicts
CACHE_PREFIX=proxy_server:

# Enable/disable database fallback for cache
# Set to 'false' to only use Redis (will fail if Redis is unavailable)
CACHE_FALLBACK=true

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Simple token-based authentication for API access
# Set this to a secure random token for production
# Default: demo-token-12345 (for development only)
ADMIN_TOKEN=your-secure-api-token-here

# Rate limiting configuration
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW=900000
# Maximum requests per window per IP
RATE_LIMIT_MAX=100

